<Window x:Class="WpfRaziLedgerApp.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent" FontFamily="{StaticResource NewFont}"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="True"
        Topmost="True"
        Width="400" Height="360">
    <Window.Resources>
        <!-- استایل مخصوص Borderهایی که باید انیمیشن داشته باشند -->
        <Style x:Key="AnimatedBorderStyle" TargetType="Border">
            <Setter Property="BorderThickness" Value="3"/>
            <!-- هر Border نمونه‌ی برس خودش را می‌گیرد (فریز نشده) -->
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <SolidColorBrush Color="HotPink"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                            <!-- به‌جای هدف‌گرفتن مسیر BorderBrush.Color، خودِ قلم را نام‌گذاری می‌کنیم -->
                            <ColorAnimationUsingKeyFrames
                            Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                            Duration="0:0:4">
                                <LinearColorKeyFrame Value="Silver"    KeyTime="0:0:0"   />
                                <LinearColorKeyFrame Value="Orange"     KeyTime="0:0:0.5" />
                                <LinearColorKeyFrame Value="Green"      KeyTime="0:0:1"   />
                                <LinearColorKeyFrame Value="DodgerBlue" KeyTime="0:0:1.5" />
                                <LinearColorKeyFrame Value="Purple"     KeyTime="0:0:2"   />
                            </ColorAnimationUsingKeyFrames>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Border Style="{StaticResource AnimatedBorderStyle}"  x:Name="SplashBorder0" CornerRadius="20" Padding="1"  BorderThickness="1">
        <Border Style="{StaticResource AnimatedBorderStyle}"  x:Name="SplashBorder" CornerRadius="20" Padding="10" BorderThickness="1" Background="#B2000000">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="255*"/>
                    <RowDefinition Height="79*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="بازرگانی  رازی" Panel.ZIndex="1"
           VerticalAlignment="Top" FontWeight="Bold"
           HorizontalAlignment="Left" 
           Margin="119,-8,0,0"
           FontSize="32">
                    <TextBlock.Foreground>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFCBDACC" Offset="0.758"/>
                            <GradientStop Color="#FF505050" Offset="0.64"/>
                            <GradientStop Color="#FF352750" Offset="0.622"/>
                            <GradientStop Color="#FFE2E2E2" Offset="0.67"/>
                            <GradientStop Color="#FF5A00FF" Offset="0.46"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                </TextBlock>
                <Image Source="Images\RazyBazargani.png" Margin="0,42,0,2" Stretch="Uniform" Height="290" Grid.RowSpan="2"/>
                <TextBlock Text="در حال اتصال" x:Name="LoadingText" 
                       VerticalAlignment="Bottom" 
                       HorizontalAlignment="Left" 
                       Margin="136,0,0,0"
                       FontSize="16" Foreground="Gray" Grid.Row="1"/>
                <Border HorizontalAlignment="Left" Height="50" Margin="115,-8,0,0" BorderThickness="0 0 0 3" BorderBrush="#FF352750" VerticalAlignment="Top" Width="152"/>
            </Grid>
        </Border>
    </Border>
</Window>
